.container
	display block
	margin-x auto
	width: 320px

	+from-width(480px)
		width: 480px

	+from-width(768px)
		width: 768px
		

/* responsive */

.sm-hidden
	display none

@media (min-width: 480px)

	.sm-hidden
		display inline-block

	.lg-hidden
		display inline-block

	.md-hidden
		display none

@media (min-width: 768px)

	.sm-hidden
		display inline-block
		
	.md-hidden
		display inline-block

	.lg-hidden
		display none